replace the particular key element in a array

#include<stdio.h>
int main(){
 int n,i,e=0,o=0;
 scanf("%d",&n);
 int a[n];
 for(i=0;i<n;i++)
   scanf("%d",&a[i]);
    
 int key,rep;
    scanf("%d%d",&key,&rep);
    
    for(i=0;i<n;i++)
    {
        if(a[i]==key)
           a[i]=rep;
    }
    for(i=0;i<n;i++)
        printf("%d ",a[i]);
}
